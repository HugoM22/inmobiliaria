@model Inmobiliaria1.Models.Pago
@{
    ViewData["Title"] = "Nuevo pago";
}
<h3>@ViewData["Title"]</h3>

<form method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ContratoId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-2">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Importe" class="form-label"></label>
        <input asp-for="Importe" class="form-control" inputmode="decimal" lang="es-AR" step="0.01" />
        <span asp-validation-for="Importe" class="text-danger"></span>
        <div class="form-text">Por defecto, el monto mensual del contrato.</div>
    </div>

    <div class="mb-2">
        <label asp-for="Detalle" class="form-label"></label>
        <input asp-for="Detalle" class="form-control" placeholder="Mes X / Abono mes ..." />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Multa" />
        <label class="form-check-label" asp-for="Multa">Es multa</label>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-outline-secondary">Volver</a>
        <button class="btn btn-primary">Guardar</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/localization/messages_es.min.js"></script>
}

