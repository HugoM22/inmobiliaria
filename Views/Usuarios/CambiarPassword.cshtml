@model Inmobiliaria1.Controllers.CambiarPasswordVM
@{
    ViewData["Title"] = "Cambiar contraseña";
}
<h2 class="mb-3">Cambiar contraseña</h2>

<div class="mb-2 text-muted">Usuario: @ViewBag.UsuarioEmail</div>

<form asp-action="CambiarPassword" method="post" class="card p-3">
    <input type="hidden" asp-for="UsuarioId" />
    <div class="mb-3">
        <label asp-for="PasswordNueva" class="form-label"></label>
        <input asp-for="PasswordNueva" type="password" class="form-control" minlength="6" required />
        <span asp-validation-for="PasswordNueva" class="text-danger"></span>
    </div>
    <div class="text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
        <button class="btn btn-warning" type="submit">Actualizar</button>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }

