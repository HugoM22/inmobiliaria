@model Inmobiliaria1.Models.Propietario

@{
    ViewData["Title"] = "Eliminar propietario";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro de eliminar este propietario?</strong><br />
    Esta acción no se puede deshacer.
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">DNI</dt>
            <dd class="col-sm-9">@Model.DNI</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Creado</dt>
            <dd class="col-sm-9">@Model.CreatedAt:dd/MM/yyyy HH:mm</dd>

            <dt class="col-sm-3">Actualizado</dt>
            <dd class="col-sm-9">@Model.UpdatedAt:dd/MM/yyyy HH:mm</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    @if (User.IsInRole(nameof(RolUsuario.Administrador))) { 
        <button type="submit" class="btn btn-danger">Eliminar</button>
     }
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>

