@model IEnumerable<Inmobiliaria1.Models.Propietario>
@using Inmobiliaria1.Models

@{
    ViewData["Title"] = "Propietarios";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">Nuevo propietario</a>
</div>

@if (Model?.Any() != true)
{
    <div class="alert alert-info">No hay propietarios cargados.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>DNI</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Tel√©fono</th>
                <th>Email</th>
                <th style="width:220px;" class="text-end"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.DNI</td>
                <td>@p.Nombre</td>
                <td>@p.Apellido</td>
                <td>@p.Telefono</td>
                <td>@p.Email</td>
                <td class="text-end text-nowrap">
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary">Detalles</a>
                    <a asp-action="Edit"    asp-route-id="@p.Id" class="btn btn-sm btn-primary ms-1">Editar</a>
                    @if (User.IsInRole(nameof(RolUsuario.Administrador)))
                    {
                        <a asp-action="Delete"  asp-route-id="@p.Id" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
