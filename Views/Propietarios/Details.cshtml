@model Inmobiliaria1.Models.Propietario

@{
    ViewData["Title"] = "Detalles del propietario";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
</div>
<hr />

<dl class="row">
    <dt class="col-sm-2">DNI</dt>
    <dd class="col-sm-10">@Model.DNI</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>

    <dt class="col-sm-2">Tel√©fono</dt>
    <dd class="col-sm-10">@Model.Telefono</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Creado</dt>
    <dd class="col-sm-10">@($"{Model.CreatedAt:dd/MM/yyyy HH:mm}")</dd>

    <dt class="col-sm-2">Actualizado</dt>
    <dd class="col-sm-10">@($"{Model.UpdatedAt:dd/MM/yyyy HH:mm}")</dd>
</dl>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
</p>

