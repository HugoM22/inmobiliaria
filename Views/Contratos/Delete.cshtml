@model Inmobiliaria1.Models.Contrato
@using Inmobiliaria1.Models
@{
    ViewData["Title"] = "Eliminar contrato";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro de eliminar este contrato?</strong><br />
    Esta acción no se puede deshacer.
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Inquilino</dt>
            <dd class="col-sm-9">
                @(Model.Inquilino is null
                    ? $"(Id: {Model.InquilinoId})"
                    : $"{Model.Inquilino.Apellido}, {Model.Inquilino.Nombre}")
            </dd>

            <dt class="col-sm-3">Inmueble</dt>
            <dd class="col-sm-9">
                @(Model.Inmueble is null
                    ? $"(Id: {Model.InmuebleId})"
                    : Model.Inmueble.Direccion)
            </dd>

            <dt class="col-sm-3">Monto mensual</dt>
            <dd class="col-sm-9">@Model.MontoMesual.ToString("C")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Estado)</dd>

            <dt class="col-sm-3">Fecha inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio:dd/MM/yyyy</dd>

            <dt class="col-sm-3">Fecha fin (pactada)</dt>
            <dd class="col-sm-9">@Model.FechaFin:dd/MM/yyyy</dd>

            @if (Model.FechaFinEfectiva.HasValue)
            {
                <dt class="col-sm-3">Fecha fin efectiva</dt>
                <dd class="col-sm-9">@Model.FechaFinEfectiva:dd/MM/yyyy</dd>
            }

            @if (User.IsInRole(nameof(RolUsuario.Administrador))) { 
                <dt class="col-sm-3">Creado por (Usuario Id)</dt>
                <dd class="col-sm-9">@Model.CreadoPorUsuarioId</dd>
            }

            @if (Model.FinalizadoPorUsuarioId.HasValue)
            {
                <dt class="col-sm-3">Finalizado por (Usuario Id)</dt>
                <dd class="col-sm-9">@Model.FinalizadoPorUsuarioId</dd>
            }
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        Eliminar
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary">
        Cancelar
    </a>
</form>

