@model Inmobiliaria1.Models.Contrato
@using Inmobiliaria1.Models

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Contrato</h4>
<hr />

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="InmuebleId" class="form-label">Inmueble</label>
        <select asp-for="InmuebleId" class="form-select" asp-items="ViewBag.Inmuebles">
            <option value="">-- Seleccionar --</option>
        </select>
        <span asp-validation-for="InmuebleId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="InquilinoId" class="form-label">Inquilino</label>
        <select asp-for="InquilinoId" class="form-select" asp-items="ViewBag.Inquilinos">
            <option value="">-- Seleccionar --</option>
        </select>
        <span asp-validation-for="InquilinoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MontoMesual" class="form-label">Monto mensual</label>
        <input asp-for="MontoMesual" class="form-control" />
        <span asp-validation-for="MontoMesual" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="FechaInicio" class="form-label">Fecha inicio</label>
            <input asp-for="FechaInicio" type="date" class="form-control" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="FechaFin" class="form-label">Fecha fin (pactada)</label>
            <input asp-for="FechaFin" type="date" class="form-control" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="FechaFinEfectiva" class="form-label">Fecha fin efectiva</label>
            <input asp-for="FechaFinEfectiva" type="date" class="form-control" />
            <span asp-validation-for="FechaFinEfectiva" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Estado" class="form-label">Estado</label>
            <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<EstadoContrato>()"></select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="CreadoPorUsuarioId" class="form-label">Creado por (Usuario Id)</label>
            <input asp-for="CreadoPorUsuarioId" class="form-control" />
            <span asp-validation-for="CreadoPorUsuarioId" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="FinalizadoPorUsuarioId" class="form-label">Finalizado por (Usuario Id)</label>
            <input asp-for="FinalizadoPorUsuarioId" class="form-control" />
            <span asp-validation-for="FinalizadoPorUsuarioId" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-link">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


