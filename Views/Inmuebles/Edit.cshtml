@model Inmobiliaria1.Models.Inmueble
@using Inmobiliaria1.Models

@{
    ViewData["Title"] = "Editar inmueble";
}

<h2 class="mb-0">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Uso" class="form-label"></label>
                <select asp-for="Uso" class="form-select"
                        asp-items="Html.GetEnumSelectList<Inmobiliaria1.Models.Uso>()">
                </select>
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ambientes" class="form-label"></label>
                <input asp-for="Ambientes" class="form-control" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" inputmode="decimal" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select"
                        asp-items="Html.GetEnumSelectList<Inmobiliaria1.Models.EstadoInmueble>()">
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Latitud" class="form-label"></label>
                <input asp-for="Latitud" class="form-control" inputmode="decimal" />
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Longitud" class="form-label"></label>
                <input asp-for="Longitud" class="form-control" inputmode="decimal" />
                <span asp-validation-for="Longitud" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Propietario</label>
                <select asp-for="PropietarioId" class="form-select" asp-items="ViewBag.PropietarioId">
                    <option value="">-- Seleccione --</option>
                </select>
                <span asp-validation-for="PropietarioId" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Tipo de inmueble</label>
                <select asp-for="TipoInmuebleId" class="form-select" asp-items="ViewBag.TipoInmuebleId">
                    <option value="">-- Seleccione --</option>
                </select>
                <span asp-validation-for="TipoInmuebleId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-link">Volver al listado</a>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

