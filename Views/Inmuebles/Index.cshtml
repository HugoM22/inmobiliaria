@model IEnumerable<Inmobiliaria1.Models.Inmueble>
@using Inmobiliaria1.Models

@{
    ViewData["Title"] = "Inmuebles";

    string ClaseEstado(EstadoInmueble e) => e switch
    {
        EstadoInmueble.Publicado  => "badge bg-success",
        EstadoInmueble.Suspendido => "badge bg-secondary",
        EstadoInmueble.EnUso      => "badge bg-warning text-dark",
        _ => "badge bg-light text-dark"
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <div class="btn-group">
        <a asp-action="Disponibles" class="btn btn-outline-success">
            Ver disponibles
        </a>
        <a asp-action="Create" class="btn btn-primary">
            Nuevo
        </a>
    </div>
</div>

@if (Model?.Any() != true)
{
    <div class="alert alert-info">No hay inmuebles cargados.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Direcci√≥n</th>
                <th>Uso</th>
                <th>Tipo</th>
                <th>Amb.</th>
                <th class="text-end">Precio</th>
                <th>Estado</th>
                <th>Propietario</th>
                <th class="text-end" style="width:190px;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Direccion</td>
                <td>@item.Uso</td>
                <td>@item.TipoInmueble?.Descripcion</td>
                <td>@item.Ambientes</td>
                <td class="text-end">@item.Precio.ToString("C")</td>
                <td><span class="@ClaseEstado(item.Estado)">@Html.DisplayFor(_ => item.Estado)</span></td>
                <td>@($"{item.Propietario?.Apellido} {item.Propietario?.Nombre}")</td>
                <td class="text-end text-nowrap">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalles</a>
                    <a asp-action="Edit"    asp-route-id="@item.Id" class="btn btn-sm btn-primary ms-1">Editar</a>
                    @if (User.IsInRole(nameof(RolUsuario.Administrador)))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}


