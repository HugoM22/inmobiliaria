@model Inmobiliaria1.Models.Inmueble

@{
    ViewData["Title"] = "Eliminar inmueble";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro de eliminar este inmueble?</strong><br />
    Esta acción no se puede deshacer.
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Dirección</dt>
            <dd class="col-sm-9">@Model.Direccion</dd>

            <dt class="col-sm-3">Uso</dt>
            <dd class="col-sm-9">@Model.Uso</dd>

            <dt class="col-sm-3">Ambientes</dt>
            <dd class="col-sm-9">@Model.Ambientes</dd>

            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(_ => Model.Estado)</dd>

            <dt class="col-sm-3">Propietario</dt>
            <dd class="col-sm-9">@($"{Model.Propietario?.Apellido} {Model.Propietario?.Nombre}")</dd>

            <dt class="col-sm-3">Tipo de inmueble</dt>
            <dd class="col-sm-9">@Model.TipoInmueble?.Descripcion</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>

